<div class="form container">
  <div class="row">
    <!-- <div class="col-xs-offset-1 col-xs-2 col-xs-2 col-xs-offset-1 form-column"> -->
      <div class="user-info">
        <h2>Welcome <%= current_user.email %></h2>
      </div>

      <div class="column">
        <div class="sections">
          <div class="suggested-influencers">
            <div class="header">
              <div class="suggested"><h4>Suggested Influencers</h4>
                <div class="container">
                  <div class="cards">
                    <% Influencer.all.each do |influencer| %>
                    <% unless influencer.users.include?(current_user)  %>
                    <div class="row" style="margin-top: 70px;">
                      <!-- <div class="col-xs-6 col-xs-offset-0"> -->
                        <!-- <div class="row"> -->
                          <!-- <div class="col-xs-4 col-sm-4"> -->
                            <div class="influencer-card">
                              <div class="photo">
                                <%= image_tag influencer.influencer_instagram_profile_image, id: "avatar" %>
                              </div>
                              <h4><%= influencer.influencer_full_name %></h4>
                              <h6><%= influencer.influencer_instagram_username %> </h6>
                               <%= render "influencers/like_icon", influencer: influencer %>
                            </div>
                            <!-- </div> -->
                            <!-- </div> -->
                            <!-- </div> -->

                          </div>
                          <% end %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              </div>



            <div class="column">


              <div class="following-influencers">
                <div class="header">
                  <div class="starred"><h4>Starred Influencers</h4></div>
                  <div class="sort">
                    <div class="btn-group">
                      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        Engagement (High to Low) <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li id="title"><%= link_to "Engagement (High to Low)", "#",{:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %></li>
                        <li id="title"><%= link_to "Engagement (Low to High)", "#",{:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %></li>
                        <li id="title"><%= link_to "Followers (High to Low)", "#",{:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %></li>
                        <li id="title"><%= link_to "Followers (Low to High)", "#",{:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %></li>
                      </ul>
                    </div>
                  </div>
                </div>
                <div class="container min-height">
                  <!-- <div class="row" style="margin-top: 70px;"> -->
                   <!-- <div class="col-xs-10 col-xs-offset-1"> -->
                    <!-- <div class="row"> -->
                      <% sorted_engagement_asc(current_user).each do |influencer| %>
                      <!-- <div class="col-xs-12 col-sm-6"> -->
                        <%= render "influencers/card", influencer: influencer %>
                        <!-- </div> -->
                        <% end %>
                        <!-- </div> -->
                        <!-- </div> -->
                        <!-- </div> -->
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>


